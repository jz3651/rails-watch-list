<div class="list-form">
    <h1 class="mb-3">Create a new list</h1>
    <%= simple_form_for(@list) do |f| %>
        <div class="mb-4"><%= f.input :name, placeholder: "List name" %></div>
        <%= f.input :photo, as: :file %>
        <%= f.submit %>
    <% end %>
    <div class="mt-3"><%= link_to "Back", lists_path %></div>
</div>
